{
  "name": "prune-stale-branches",
  "displayName": "prune-stale-branches",
  "description": "Easily prune stale branches in your project",
  "version": "1.0.0",
  "license": "MIT",
  "icon": "images/logo-transparent.png",
  "publisher": "xadamxk",
  "homepage": "https://github.com/xadamxk/vscode-PruneStaleBranches",
  "bugs": {
    "url": "https://github.com/xadamxk/vscode-PruneStaleBranches/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xadamxk/vscode-PruneStaleBranches"
  },
  "author": {
    "name": "xadamxk",
    "url": "https://github.com/xadamxk"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "prune",
    "branch",
    "git",
    "repository"
  ],
  "activationEvents": [
    "workspaceContains:.git",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Prune Stale Branches",
        "order": 1,
        "properties": {
          "prune-stale-branches.statusBar.enabled": {
            "type": "boolean",
            "order": 1,
            "default": true,
            "description": "Show the status bar item for pruning stale local branches"
          },
          "prune-stale-branches.statusBar.alignment": {
            "type": "string",
            "order": 2,
            "enum": [
              "left",
              "right"
            ],
            "default": "left",
            "description": "Which side of the status bar to show the action button on"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "prune-stale-branches.previewStaleBranchesCommand",
        "title": "Preview Stale Branches"
      },
      {
        "command": "prune-stale-branches.pruneStaleBranchesCommand",
        "title": "Prune Stale Branches"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  }
}